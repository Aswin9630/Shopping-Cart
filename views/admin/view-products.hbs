<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>
        </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
    </tr>
  </thead>

  <tbody>
        {{#each products}}  
    <tr>
      <th scope="row">{{indexInc @index}}</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td><img style="width: 50px;height:50px;" src="/product-images/{{this._id}}.jpg" alt="img"></td>
      <td>
         <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
         <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"  onclick="return confirm('Are you sure you want to delete {{this.Name}}?')">Delete</a>          {{!-- requesting by params method --}}

         {{!-- <a href="/admin/delete-product?id={{this._id}}&name=aswin" class="btn btn-danger">Delete</a>    requesting by query method --}}
      </td>
    </tr>
        {{/each}}
  </tbody>

</table>
    </div>
</section>